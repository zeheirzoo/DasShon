<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prod_info"
        android:padding="20dp">
        <TextView
            android:text="Client : "
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/client_name"
            android:layout_below="@+id/client"
            android:text="zou"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/client_name"
            android:id="@+id/conception"
            android:text="Num Conception : "
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/num_conception"
            android:layout_below="@id/conception"
            android:text="conseption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Article : "
            android:id="@+id/article"
            android:layout_below="@id/num_conception"
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_below="@id/article"
            android:text="UwwR16"
            android:id="@+id/article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_below="@id/article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/center"
                android:layout_centerInParent="true"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/accept"
                android:layout_toRightOf="@id/center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:text="accepter"
                android:background="#4CAF50"/>
            <Button
                android:id="@+id/reject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/center"
                android:textColor="@android:color/white"
                android:text="refuser"
                android:background="#E45959"
                />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/white"
            android:background="#E45959"
            />
    </RelativeLayout>


</RelativeLayout>